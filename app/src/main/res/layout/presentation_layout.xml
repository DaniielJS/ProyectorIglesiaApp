<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/presentation_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fondoVersiculo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fondo"
        android:visibility="gone" />

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone" />
    <!-- Contenedor para centrar el contenido vertical y horizontal -->
    <LinearLayout
        android:id="@+id/contenedorGeneral"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <!-- Primera sección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/fondo_transparente">

            <TextView
                android:id="@+id/tituloSeccion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título 1"
                android:textColor="@android:color/black"
                android:textSize="70sp"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/textoSeccion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto de los versículos sección 1"
                android:textColor="@android:color/black"
                android:textSize="56sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Línea divisoria -->
        <View
            android:id="@+id/separadorLineal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp"/>

        <!-- Segunda sección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/fondo_transparente">

            <TextView
                android:id="@+id/tituloSeccion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título 2"
                android:textColor="@android:color/black"
                android:textSize="70sp"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/textoSeccion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto de los versículos sección 2"
                android:textColor="@android:color/black"
                android:textSize="56sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
